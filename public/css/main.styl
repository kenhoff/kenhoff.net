#flexbox
	display flex
	flex-wrap wrap
	justify-content center

.flexbox-child
	height 200px
	width 200px
	display flex
	&:hover
		text-decoration none

.flexbox-child-hoverbox
	width 100%
	height 100%
	display none
	background rgba(0, 0, 0, .5)

.hoverbox-hover
	display flex

.flexbox-child-hoverbox-text
	margin auto
	text-align center
	color white

