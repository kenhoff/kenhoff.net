#flexbox
	display flex
	flex-wrap wrap
	justify-content center

.flexbox-child
	height 200px
	width 200px
	display flex
	text-decoration none

a
	text-decoration inherit

.flexbox-child-hoverbox
	width 100%
	height 100%
	display none
	background rgba(0, 0, 0, .5)
	text-decoration none

.hoverbox-hover
	display flex
	text-decoration none

.flexbox-child-hoverbox-text
	margin auto
	text-align center
	color white
	text-decoration none

